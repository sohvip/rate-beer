<div>
  <b>Name:</b>
  <%= @style.name %>
</div>
<div>
  <b>Description:</b>
  <%= @style.description %>
</div>
<div>
  <b>Beers:</b>
  <ul>
    <% @style.beers.each do |beer| %>
    <li><%= beer.name %></li>
    <% end %>
  </ul>
</div>
<div>
  <%= link_to "Edit this style", edit_style_path(@style), class:"btn btn-primary" if current_user %>
  <%= link_to "Back to styles", styles_path, class:"btn btn-primary" %>

  <%= button_to "Destroy this style", @style, method: :delete, class:"btn btn-danger" if current_user %>
</div>
