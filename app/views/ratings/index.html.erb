<h1>Ratings</h1>

<div class="row">
    <div class="col-sm-4">
      <h2>Best Beers</h2>
        <table class="table table-hover">
          <tr>
            <th>Beer</th>
            <th>Average</th>
          </tr>
          <% @top_beers.each do |beer| %>
            <tr>
              <td><%= beer.name %></td>
              <td><%= beer.average_rating %></td>
            </tr>
          <% end %>
        </table>
    </div>
    <div class="col-sm-4">
      <h2>Best Breweries</h2>
      <table class="table table-hover">
        <tr>
          <th>Brewery</th>
          <th>Average</th>
        </tr>
        <% @top_breweries.each do |brewery| %>
          <tr>
            <td><%= brewery.name %></td>
            <td><%= brewery.average_rating %></td>
          </tr>
        <% end %>
      </table>
    </div>
</div>

<h2>Most Active Users</h2>
<p>tbd</p>

<h2>Recent Ratings</h2>
<ul>
  <% @recent_ratings.each do |rating| %>
    <li>
      <%= rating.beer.name %>
      <%= rating.score %>
      <%= rating.created_at %>
    </li>
  <% end %>
</ul>
